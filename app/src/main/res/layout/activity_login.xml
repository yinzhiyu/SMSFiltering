<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar_title" />

    <ImageView
        android:id="@+id/iv_img_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="60px"
        android:layout_marginTop="90px"
        android:src="@drawable/img_head" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:background="@drawable/layer_line">
        <!--     android:background="@drawable/layer_line"-->


        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0px"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="bottom"
            android:hint="请输入您的手机号"
            android:inputType="number"
            android:maxLength="11"
            android:paddingBottom="16px"
            android:textColor="@color/color_2B2B2B"
            android:textColorHint="@color/color_92a0a9"
            android:textSize="32px" />

        <ImageView
            android:id="@+id/iv_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20px"
            android:layout_marginTop="18px"
            android:src="@drawable/btn_delete"
            android:visibility="gone" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:background="@drawable/layer_line">


        <!--   android:src="@drawable/btn_nosee"-->
        <EditText
            android:id="@+id/et_password"
            android:layout_width="0px"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="bottom"
            android:hint="请输入您的登录密码"
            android:inputType="textPassword"
            android:paddingBottom="16px"
            android:textColor="@color/color_2B2B2B"
            android:textColorHint="@color/color_92a0a9"
            android:textSize="32px" />

        <ImageView
            android:id="@+id/iv_btn_delete_pas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="50px"
            android:paddingTop="18px"
            android:src="@drawable/btn_delete"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_btn_nosee"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20px"
            android:paddingTop="18px"
            android:src="@drawable/btn_nosee" />
    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="620px"
        android:layout_height="90px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/color_4bacf0"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="32px" />


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/tv_login_password"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20px"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20px"
            android:gravity="right"
            android:text="注册"
            android:textColor="@color/color_92a0a9"
            android:textSize="28px" />
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
